<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.connection.gui.ProfileController">
    <TabPane prefWidth="400">
        <Tab text="Informations personnelles">
            <VBox spacing="10">
                <Label text="Prénom :" />
                <TextField fx:id="firstNameTextField" />
                <Label text="Nom :" />
                <TextField fx:id="lastNameTextField" />
                <Label text="Adresse :" />
                <TextField fx:id="addressTextField" />
                <Label text="Téléphone :" />
                <TextField fx:id="phoneTextField" prefHeight="26.0" prefWidth="323.0" />
                <Label text="Email :" />
                <TextField fx:id="emailTextField" />
                <Button onAction="#savePersonalInformation" text="Enregistrer" />
            </VBox>
        </Tab>

        <Tab text="Expérience scolaire">
            <VBox spacing="10">
                <Label text="Formation académique :" />
                <VBox spacing="5">
                    <HBox spacing="5">
                        <Label text="Diplôme :" />
                        <TextField fx:id="diplomaTextField" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Date début :" />
                        <DatePicker fx:id="starteDatePicker" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Date fin :" />
                        <DatePicker fx:id="endeDatePicker" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Université :" />
                        <TextField fx:id="universityTextField" />
                    </HBox>
                </VBox>
                <Button onAction="#saveAcademicExperience" text="Enregistrer" />
            </VBox>
        </Tab>

        <Tab text="Expérience professionnelle">
            <VBox spacing="10">
                <Label text="Expérience professionnelle :" />
                <VBox spacing="5">
                    <HBox spacing="5">
                        <Label text="Titre :" />
                        <TextField fx:id="titleTextField" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Date début :" />
                        <DatePicker fx:id="startDatePicker" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Date fin :" />
                        <DatePicker fx:id="endDatePicker" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Tâches associées :" />
                        <TextArea fx:id="tasksTextArea" prefHeight="100" />
                    </HBox>
                    <HBox spacing="5">
                        <Label text="Nom de la société :" />
                        <TextField fx:id="companyTextField" />
                    </HBox>
                </VBox>
                <Button onAction="#saveProfessionalExperience" text="Enregistrer" />
            </VBox>
        </Tab>
    </TabPane>
    <VBox spacing="10">
        <Button fx:id="logout_btn" mnemonicParsing="false" onAction="#logout" text="Déconnecter" />
        <TabPane fx:id="savedInformationTabPane" prefWidth="400" visible="false">
            <Tab text="Informations personnelles">
                <VBox spacing="10">
                    <Label text="Prénom :" />
                    <Label fx:id="savedFirstNameLabel" />
                    <Label text="Nom :" />
                    <Label fx:id="savedLastNameLabel" />
                    <Label text="Adresse :" />
                    <Label fx:id="savedAddressLabel" />
                    <Label text="Téléphone :" />
                    <Label fx:id="savedPhoneLabel" />
                    <Label text="Email :" />
                    <Label fx:id="savedEmailLabel" />
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</VBox>
