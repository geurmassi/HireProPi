                  <Image url="@../../../../images/iconUpload.png" />
              </image>
          </ImageView>
          <ImageView fx:id="button_send" fitHeight="30.0" fitWidth="49.0" layoutX="429.0" layoutY="338.0" onMouseClicked="#handleButtonClick">
              <image>
                  <Image url="@../../../../images/iconsSend.png" />
              </image>
          </ImageView>
    </children>
    
