        <TextField fx:id="tf_message" layoutX="64.0" layoutY="335.0" prefHeight="38.0" prefWidth="361" />
        <ScrollPane fx:id="sp_main" fitToWidth="true" layoutX="30" layoutY="70" prefHeight="256" prefWidth="418">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="248" prefWidth="412">
                    <children>
                        <Pane prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
        <Label layoutX="219.0" layoutY="29.0" text="Messenger">
